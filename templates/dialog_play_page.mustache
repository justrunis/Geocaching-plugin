{{!
    @template mod_treasurehunt/dialog_play_page


    The purpose of this template is to render a dialog.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * attributes Array of name / value pairs.

}}

{{! Dialog}}
<div class="play-modal" data-animation="slideInOutTop" id="{{$dialogid}}{{/dialogid}}">
    <!-- modal mask -->
    <div class="modal-mask"></div>

    <div class="play-modal-dialog">
        <!-- Header -->
        <nav class="play-navbar">
            {{$dialogheading}}
                <button class="btn close-modal back-page">
                    <i class="fa fa-chevron-left" aria-hidden="true"></i>
                </button>
                <span class="title">{{$dialogtitle}}{{/dialogtitle}}</span>
                <button class="btn close-modal close-dialog">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </button>
            {{/dialogheading}}
        </nav>

        <div class="play-modal-content">
            {{$dialogcontent}}{{/dialogcontent}}
        </div>

        {{$dialogfooter}}
        {{/dialogfooter}}
    </div>
</div>