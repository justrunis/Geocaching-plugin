{{=<% %>=}}
<div class="treasurehunt-play-question-page">

  <ion-card padding class="question-card">

    <div class="card-title">
      <core-format-text  [text]="lastSuccessfulStage.question"></core-format-text>
    </div>

    <ion-list radio-group [(ngModel)]="selectedAnswer">

      <ion-item *ngFor="let answer of lastSuccessfulStage.answers">
        <ion-label>{{answer.answertext}}</ion-label>
        <ion-radio [value]="answer.id"></ion-radio>
      </ion-item>

    </ion-list>

    <ion-row>
      <ion-col text-right>
        <button icon-start ion-button [disabled]="!selectedAnswer" (click)="sendSelectedAnswer(selectedAnswer)">
          <ion-icon name="checkmark"></ion-icon>
          {{'plugin.mod_treasurehunt.send' | translate}}
        </button>
      </ion-col>
    </ion-row>

  </ion-card>

</div>